<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textSize">@dimen/heading_text</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="paddingStart">@dimen/dp_12</item>
    </style>

    <style name="HeaderBackButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:outlineAmbientShadowColor">?attr/colorOnPrimary</item>
        <item name="android:outlineSpotShadowColor">?attr/colorOnPrimary</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconSize">@dimen/dp_24</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:paddingHorizontal">@dimen/dp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/heading_text</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_8</item>
        <item name="iconSize">@dimen/dp_24</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="android:outlineSpotShadowColor">@color/YP_white</item>
        <item name="android:outlineAmbientShadowColor">@color/YP_white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsItemsName">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsItemsIcons">
        <item name="android:scaleType">center</item>
    </style>

    <style name="GraySwitch" parent="Theme.AppCompat.Light">
        <item name="trackTint">@color/YP_light_gray</item>
        <item name="thumbTint">@color/YP_text_gray</item>
    </style>

    <style name="TrackItemText" parent="">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackItemText.BottomText">
        <item name="android:textColor">?attr/textGrayToWhite</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="SearchActivityMessages">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="SearchActivityButtons">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="SearchBar">
        <item name="android:backgroundTint">?attr/lightGrayToWhite</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textColorHint">?attr/textGrayToBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

</resources>