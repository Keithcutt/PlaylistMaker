<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/YP_blue</item>
        <item name="colorOnPrimary">@color/YP_white</item>
        <item name="colorOnSecondary">@color/YP_black</item>
        <item name="textGrayToWhite">@color/YP_text_gray</item>
        <item name="textGrayToBlack">@color/YP_text_gray</item>
        <item name="lightGrayToWhite">@color/YP_light_gray</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/YP_blue</item>
    </style>

    <style name="RemovingAlertDialog" parent="AlertDialog">
        <item name="android:background">@color/YP_white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/YP_black</item>
    </style>

</resources>